{
  "name": "uwb-rover-live-telemetry-ui",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:https": "node scripts/ensure-dev-cert.mjs && VITE_HTTPS=1 VITE_SSL_KEY=cert/dev.key VITE_SSL_CERT=cert/dev.crt vite",
